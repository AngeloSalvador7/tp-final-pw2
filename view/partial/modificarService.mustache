<main class="container-fluid">

    <div id="main" class="row text-white">

        <div class="info col-12 col-sm-2 bg-dark p-0">

            <div class="mt-3 me-3 text-white text-end">
                <button class="btn btn-outline-gray rounded"></button>
            </div>

            <div class="text-center text-white mb-5">
                <h3 class="mb-3"></h3>
            </div>

            <ul class="opciones">
                <li><a class="text-white" href="mecanico/service">Service</a></li>
                <li><a class="text-white" href="mecanico/agregarService">Realizar service</a></li>
            </ul>

        </div>

        <div class="window col-12 col-sm-9 text-dark">
            <h1 class="mt-2">Modificar service #{{id_service}}</h1>
            <hr/>
            <div class="container-fluid">
                <div class="row">
                    <div class="panel panel-primary">
                        <div class="panel-body">
                            {{#service}}
                                <form action="mecanico/cambiarService" method="POST">

                                    <div class="form-group mt-2">
                                        <label class="control-label" for="id_vechiculo">Veh√≠culo</label>
                                        <select name="id_vehiculo" id="id_vechiculo" class="form-select"
                                                aria-label="Default select example">
                                            <option value="{{id_vehiculo}}" selected hidden>{{patente}}</option>
                                            {{#vehiculos}}
                                                <option value="{{id}}">{{patente}}</option>
                                            {{/vehiculos}}
                                        </select>
                                    </div>

                                    <div class="form-group mt-2">
                                        <label class="control-label" for="is_externo">Service interno</label>
                                        <select name="is_externo" id="is_externo" class="form-select"
                                                aria-label="Default select example">
                                            <option value="{{is_externo}}" selected hidden>
                                                {{#is_externo}}
                                                    SI
                                                {{/is_externo}}
                                                {{^is_externo}}
                                                    NO
                                                {{/is_externo}}
                                            </option>
                                            <option value="0">NO</option>
                                            <option value="1">SI</option>
                                        </select>
                                    </div>
                                    <div class="form-group mt-2">
                                        <label class="control-label" for="fecha">Ingrese la fecha del service</label>
                                        <input id="fecha" type="date" value="{{fecha}}" name="fecha" class="form-control">
                                    </div>
                                    <div class="form-group mt-2">
                                        <label class="control-label" for="detalle">Detalle</label>
                                        <input id="detalle" type="text" value="{{detalle}}" name="detalle" class="form-control"
                                               placeholder="Ingrese el detalle del service">
                                    </div>
                                    <div class="form-group mt-2">
                                        <label for="costo" class="mb-1">Costo del service</label>
                                        <div class="input-group mb-3">
                                            <span class="input-group-text">U$D</span>
                                            <input type="number" class="form-control" value="{{costo}}" id="costo" name="costo">
                                        </div>
                                    </div>
                                    <div class="form-group mt-2 d-flex justify-content-end">
                                        <button value="{{id}}" id="modificar_id" name="modificar_id" class="btn btn-success btn-block mt-4 mb-4">Modificar</button>
                                    </div>
                                </form>
                            {{/service}}
                        </div>
                    </div>
                </div>
            </div>

            <h3>{{mensaje}}</h3>
        </div>

    </div>

</main>