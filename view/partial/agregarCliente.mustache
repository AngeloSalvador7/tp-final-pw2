<main class="container-fluid">

    <div id="main" class="row text-white">

        <div class="info col-12 col-sm-2 bg-dark p-0">

            <div class="mt-3 me-3 text-white text-end">
                <button class="btn btn-outline-gray rounded"></button>
            </div>

            <div class="text-center text-white mb-5">
                <h3 class="mb-3"></h3>
            </div>

            <ul class="opciones">
                <li><a class="text-white" href="clientes">Clientes</a></li>
                <li><a class="text-white" href="clientes/agregarCliente">Agregar cliente</a></li>
            </ul>

        </div>

        <div class="window col-12 col-sm-9 text-dark">
            <h1 class="mt-2">Agregar un cliente</h1>
            <hr/>
            <div class="container-fluid">
                <div class="row">
                    <div class="panel panel-primary">
                        <div class="panel-body">
                            <form action="clientes/insertarCliente" method="POST">
                                <div class="form-group mt-2">
                                    <label class="control-label" for="denominacion">Denominacion</label>
                                    <input id="denominacion" type="text" name="denominacion" class="form-control" placeholder="Ingrese la denominacion">
                                </div>

                                <div class="form-group mt-2">
                                    <label class="control-label" for="cuit">Cuit</label>
                                    <input id="cuit" type="number" name="cuit" class="form-control" placeholder="Ingrese el  cuit">
                                </div>

                                <div class="form-group mt-2">
                                    <label class="control-label" for="direccion">Direccion</label>
                                    <input id="direccion" type="text" name="direccion" class="form-control" placeholder="Ingrese la direccion">
                                </div>

                                <div class="form-group mt-2">
                                    <label class="control-label" for="telefono">Telefono</label>
                                    <input id="telefono" type="text" name="telefono" class="form-control" placeholder="Ingrese el telefono">
                                </div>

                                <div class="form-group mt-2">
                                    <label class="control-label" for="email">Email</label>
                                    <input id="email" type="text" name="email" class="form-control" placeholder="Ingrese el email">
                                </div>

                                <div class="form-group mt-2">
                                    <label class="control-label" for="razon_social"> Razon social </label>
                                    <input id="razon_social" type="text" name="razon_social" class="form-control" placeholder="Ingrese  Razon Social">
                                </div>

                                <div class="form-group mt-2 d-flex justify-content-end" >
                                    <button class="btn btn-success btn-block mt-4 mb-4">Agregar</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <h3>{{mensaje}}</h3>
        </div>

    </div>

</main>