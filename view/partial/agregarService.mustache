<main class="container-fluid">

    <div id="main" class="row text-white">

        <div class="info col-12 col-sm-2 bg-dark p-0">

            <div class="mt-3 me-3 text-white text-end">
                <button class="btn btn-outline-gray rounded"></button>
            </div>

            <div class="text-center text-white mb-5">
                <h3 class="mb-3"></h3>
            </div>

            <ul class="opciones">
                <li><a class="text-white" href="mecanico/service">Service</a></li>
                <li><a class="text-white" href="mecanico/agregarService">Realizar service</a></li>
            </ul>

        </div>

        <div class="window col-12 col-sm-9 text-dark">
            <h1 class="mt-2">Agregar un service</h1>
            <hr/>
            <div class="container-fluid">
                <div class="row">
                    <div class="panel panel-primary">
                        <div class="panel-body">
                            <form action="mecanico/insertarService" method="POST">
                                <div class="form-group mt-2">
                                    <label class="control-label" for="id_vechiculo">Vehículo</label>
                                    <select name="id_vechiculo" id="id_vechiculo" class="form-select"
                                            aria-label="Default select example">
                                        <option value="" selected disabled hidden>Elija Vehículo</option>
                                        {{#vehiculos}}
                                            <option value="{{id}}">{{patente}}</option>
                                        {{/vehiculos}}
                                    </select>
                                </div>

                                <div class="form-group mt-2">
                                    <label class="control-label" for="is_externo">Service interno</label>
                                    <select name="is_externo" id="is_externo" class="form-select"
                                            aria-label="Default select example">
                                        <option value="" selected disabled hidden>Elija service</option>
                                        <option value="0">NO</option>
                                        <option value="1">SI</option>
                                    </select>
                                </div>
                                <div class="form-group mt-2">
                                    <label class="control-label" for="fecha">Ingrese la fecha del service</label>
                                    <input id="fecha" type="date" name="fecha" class="form-control">
                                </div>
                                <div class="form-group mt-2">
                                    <label class="control-label" for="detalle">Detalle</label>
                                    <input id="detalle" type="text" name="detalle" class="form-control"
                                           placeholder="Ingrese el detalle del service">
                                </div>
                                <div class="form-group mt-2">
                                    <label for="costo" class="mb-1">Costo del service</label>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">U$D</span>
                                        <input type="number" class="form-control" id="costo" name="costo">
                                    </div>
                                </div>
                                <div class="form-group mt-2 d-flex justify-content-end">
                                    <button class="btn btn-success btn-block mt-4 mb-4">Crear</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <h3>{{mensaje}}</h3>
        </div>

    </div>

</main>