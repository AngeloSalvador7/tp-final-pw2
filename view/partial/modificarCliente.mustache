<main class="container-fluid">

    <div id="main" class="row text-white">

        <div class="info col-12 col-sm-2 bg-dark p-0">

            <div class="mt-3 me-3 text-white text-end">
                <button class="btn btn-outline-gray rounded"></button>
            </div>

            <div class="text-center text-white mb-5">
                <h3 class="mb-3"></h3>
            </div>

            <ul class="opciones">
                <li><a class="text-white" href="clientes">Cliente</a></li>
                <li><a class="text-white" href="clientes/agregarCliente">Agregar cliente</a></li>
            </ul>

        </div>

        <div class="window col-12 col-sm-9 text-dark">
            <h1 class="mt-2">Modificar Cliente {{id}}</h1>
            <hr/>
            <div class="container-fluid">
                <div class="row">
                    <div class="panel panel-primary">
                        <div class="panel-body">
                            {{#cliente}}
                                <form action="clientes/actualizarCliente" method="POST">
                                    <div class="form-group mt-2">

                                        <label class="control-label" for="denominacion">Denominacion</label>
                                        <input id="denominacion" type="text" value="{{denominacion}}" name="denominacion" class="form-control">
                                    </div>

                                    <div class="form-group mt-2">
                                        <label class="control-label" for="cuit">Cuit</label>
                                        <input id="cuit" type="number" value="{{cuit}}" name="cuit" class="form-control">
                                    </div>

                                    <div class="form-group mt-2">
                                        <label class="control-label" for="direccion">Direccion</label>
                                        <input id="direccion" value="{{direccion}}" type="text" name="direccion" class="form-control">
                                    </div>

                                    <div class="form-group mt-2">
                                        <label class="control-label" for="telefono">Telefono</label>
                                        <input type="tel" class="form-control" value="{{telefono}}" id="telefono" pattern="[0-9]{3}-[0-9]{4}-[0-9]{4}"
                                               placeholder="000-0000-0000">
                                    </div>

                                    <div class="form-group mt-2">
                                        <label class="control-label" for="email">Email</label>
                                        <input id="email" type="text" value="{{email}}" name="email" class="form-control">
                                    </div>

                                    <div class="form-group mt-2">
                                        <label class="control-label" for="razon_social">Razon social</label>
                                        <input id="razon_social" type="text" value="{{razon_social}}" name="razon_social" class="form-control">
                                    </div>

                                    <div class="form-group mt-2 d-flex justify-content-end">
                                        <button name="modificar_id" value="{{id}}"
                                                class="btn btn-warning btn-block">Modificar</button>
                                    </div>
                                </form>
                            {{/cliente}}
                        </div>
                    </div>
                </div>
            </div>

            <h3>{{mensaje}}</h3>
        </div>

    </div>

</main>