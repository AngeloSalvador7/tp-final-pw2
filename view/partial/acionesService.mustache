<main class="container-fluid ">

    <div id="main" class="row text-white">

        <div class="info col-12 col-sm-2 bg-dark p-0">

            <div class="mt-3 me-3 text-white text-end">
                <button class="btn btn-outline-gray rounded"></button>
            </div>

            <div class="text-center text-white mb-5">
                <h3 class="mb-3"></h3>
            </div>

            <ul class="opciones">
                <li><a class="text-white" href="mecanico/service">Service</a></li>
                <li><a class="text-white" href="mecanico/agregarService">Realizar service</a></li>
            </ul>

        </div>

        <div class="window col-12 col-sm-9 text-dark ">
            <h1 class="mt-2">Service</h1>
            <hr/>
            <table class="table text-center ">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Vehiculo</th>
                    <th scope="col">Km de la unidad</th>
                    <th scope="col">Fecha programada</th>
                    <th scope="col">Costo</th>
                    <th scope="col">Trabajo interno</th>
                    <th scope="col">Detalle</th>
                    <th scope="col">Mecanico</th>
                    <th scope="col">Modificar</th>
                    <th scope="col">Borrar</th>
                </tr>
                </thead>
                <tbody>
                {{#service}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{patente}}</td>
                        <td>{{km_recorrido}} Km</td>
                        <td>{{fecha}}</td>
                        <td>{{costo}} U$D</td>
                        {{#is_externo}}
                            <td>SI</td>
                        {{/is_externo}}
                        {{^is_externo}}
                            <td>NO</td>
                        {{/is_externo}}
                        <td>{{detalle}}</td>
                        <td>{{nombre_mecanico}}</td>
                        <td>
                            <button form="modificar" name="modificar_id" value="{{id}}"
                                    class="btn btn-outline-secondary btn-sm btn-block">Editar</button>
                        </td>
                        <td>
                            <button form="borrar" name="borrar_id" value="{{id}}"
                                    class="btn btn-outline-danger btn-sm btn-block">Borrar
                            </button>
                        </td>
                    </tr>
                {{/service}}
                </tbody>
            </table>

            <form action="mecanico/borrarService" id="borrar" method="POST"></form>
            <form action="mecanico/modificarService" id="modificar" method="POST"></form>

            <h3>{{mensaje}}</h3>
        </div>

    </div>

</main>