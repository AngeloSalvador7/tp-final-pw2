<main class="container-fluid ">

    <div id="main" class="row text-white">

        <div class="info col-12 col-sm-2 bg-dark p-0">

            <div class="mt-3 me-3 text-white text-end">
                <button class="btn btn-outline-gray rounded"></button>
            </div>

            <div class="text-center text-white mb-5">
                <h3 class="mb-3"></h3>
            </div>

            <ul class="opciones">
                <li><a class="text-white" href="clientes">Cliente</a></li>
                <li><a class="text-white" href="clientes/agregarCliente">Agregar cliente</a></li>
                <li><a class="text-white" href="clientes/editarCliente">Editar cliente</a></li>
            </ul>

        </div>

        <div class="window col-12 col-sm-9 text-dark ">
            <h1 class="mt-2">Editar cliente</h1>
            <hr/>
            <table class="table text-center ">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Denominacion</th>
                    <th scope="col">Cuit</th>
                    <th scope="col">Direccion</th>
                    <th scope="col">Telefono</th>
                    <th scope="col">Email</th>
                    <th scope="col">Razon Social</th>
                    <th scope="col">Modificar</th>
                    <th scope="col">Borrar</th>
                </tr>
                </thead>
                <tbody>
                {{#clientes}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{denominacion}} </td>
                        <td>{{cuit}}</td>
                        <td>{{direccion}}</td>
                        <td>{{telefono}}</td>
                        <td>{{email}}</td>
                        <td>{{razon_social}}</td>
                        <td>
                            <form action="clientes/modificarCliente" id="modificar" method="POST">
                                <button type="submit" name="modificar_id" value="{{id}}"
                                        class="btn btn-outline-secondary btn-sm btn-block">Editar</button>
                            </form>
                        </td>
                        <td>
                            <form action="clientes/borrarCliente" id="borrar" method="POST">
                                <button type="submit" name="borrar_id" value="{{id}}"
                                        class="btn btn-outline-danger btn-sm btn-block">Borrar</button>
                            </form>
                        </td>
                    </tr>
                {{/clientes}}
                </tbody>
            </table>

            <h3>{{mensaje}}</h3>
        </div>

    </div>

</main>