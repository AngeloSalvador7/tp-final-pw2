<main class="container-fluid">

    <div id="main" class="row text-white">

        <div class="info col-12 col-sm-2 bg-dark p-0">

            <div class="mt-3 me-3 text-white text-end">
                <button class="btn btn-outline-gray rounded"></button>
            </div>

            <div class="text-center text-white mb-5">
                <h3 class="mb-3"></h3>
            </div>

            <ul class="opciones">
                <li><a class="text-white" href="cargas">Cargas</a></li>
                <li><a class="text-white" href="cargas/agregarCarga">Agregar carga</a></li>
                <li><a class="text-white" href="cargas/editarCarga">Editar carga</a></li>
            </ul>

        </div>

        <div class="window col-12 col-sm-9 text-dark">
            <h1 class="mt-2">Cargas</h1>
            <hr />
            <table class="table text-center">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Peso neto</th>
                    <th scope="col">Descripcion</th>
                    <th scope="col">Hazard</th>
                    <th scope="col">Clase IMO</th>
                    <th scope="col">Subclase IMO</th>
                    <th scope="col">Reefer</th>
                    <th scope="col">Temperatura</th>
                    <th scope="col">Arrastre</th>
                </tr>
                </thead>
                <tbody>
                {{#cargas}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{peso_neto}} Kg</td>
                        <td>{{Carga}}</td>
                        {{#hazard}}
                            <td>SI</td>
                        {{/hazard}}
                        {{^hazard}}
                            <td>NO</td>
                        {{/hazard}}
                        <td>{{imo_class}}</td>
                        <td>{{imo_sclass}}</td>
                        {{#reefer}}
                            <td>SI</td>
                        {{/reefer}}
                        {{^reefer}}
                            <td>NO</td>
                        {{/reefer}}
                        <td>{{temperatura}} ÂºC</td>
                        <td>{{descripcion}}</td>
                        </td>
                    </tr>
                {{/cargas}}
                </tbody>
            </table>
            <h3>{{mensaje}}</h3>
        </div>

    </div>

</main>