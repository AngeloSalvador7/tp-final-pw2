<main class="container-fluid ">

    <div id="main" class="row text-white">

        <div class="info col-12 col-sm-2 bg-dark p-0">

            <div class="mt-3 me-3 text-white text-end">
                <button class="btn btn-outline-gray rounded"></button>
            </div>

            <div class="text-center text-white mb-5">
                <h3 class="mb-3"></h3>
            </div>

            <ul class="opciones">
                <li><a class="text-white" href="vehiculos">Vehiculos</a></li>
                <li><a class="text-white" href="vehiculos/agregarVehiculo">Agregar vehiculo</a></li>
            </ul>

        </div>

        <div class="window col-12 col-sm-9 text-dark ">
            <h1 class="mt-2">Editar vehiculos</h1>
            <hr/>
            <table class="table text-center ">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Marca</th>
                    <th scope="col">Modelo</th>
                    <th scope="col">Patente</th>
                    <th scope="col">Motor</th>
                    <th scope="col">Chasis</th>
                    <th scope="col">Kilometraje</th>
                    <th scope="col">Arrastre</th>
                    <th scope="col">Modificar</th>
                    <th scope="col">Borrar</th>
                </tr>
                </thead>
                <tbody>
                {{#vehiculos}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{marca}} </td>
                        <td>{{modelo}}</td>
                        <td>{{patente}}</td>
                        <td>{{motor}}</td>
                        <td>{{chasis}}</td>
                        <td>{{km_recorrido}}</td>
                        <td>{{descripcion}}</td>
                        <td>
                            <form action="vehiculos/modificarVehiculo" id="modificar" method="POST">
                            <button type="submit" name="modificar_id" value="{{id}}"
                                    class="btn btn-outline-secondary btn-sm btn-block">Editar</button>
                            </form>
                        </td>
                        <td>
                            <form action="vehiculos/borrarVehiculo" id="borrar" method="POST">
                                <button type="submit" name="borrar_id" value="{{id}}"
                                        class="btn btn-outline-danger btn-sm btn-block">Borrar</button>
                            </form>
                        </td>
                    </tr>
                {{/vehiculos}}
                </tbody>
            </table>

<!--            <form action="vehiculos/borrarVehiculo" id="borrar" method="POST"></form>-->
<!--            <form action="vehiculos/modificarVehiculo" id="modificar" method="POST"></form>-->

            <h3>{{mensaje}}</h3>
        </div>

    </div>

</main>