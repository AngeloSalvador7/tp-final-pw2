<main class="container-fluid">

    <div id="main" class="row text-white">

        <div class="info col-12 col-sm-2 bg-dark p-0">

            <div class="mt-3 me-3 text-white text-end">
                <button class="btn btn-outline-gray rounded"></button>
            </div>

            <div class="text-center text-white mb-5">
                <h3 class="mb-3"></h3>
            </div>

            <ul class="opciones">
                <li><a class="text-white" href="vehiculos">Vehiculos</a></li>
                <li><a class="text-white" href="vehiculos/agregarVehiculo">Agregar vehiculo</a></li>
            </ul>

        </div>

        <div class="window col-12 col-sm-9 text-dark">
            <h1 class="mt-2">Modificar vehiculo {{id}}</h1>
            <hr/>
            <div class="container-fluid">
                <div class="row">
                    <div class="panel panel-primary">
                        <div class="panel-body">
                            {{#vehiculo}}
                                <form action="vehiculos/actualizarVehiculo" method="POST">
                                    <div class="form-group mt-2">
                                        <label class="control-label" for="marca">Marca</label>
                                        <input id="marca" type="text" value="{{marca}}" name="marca" class="form-control">
                                    </div>

                                    <div class="form-group mt-2">
                                        <label class="control-label" for="modelo">Modelo</label>
                                        <input id="modelo" type="text" value="{{modelo}}" name="modelo" class="form-control">
                                    </div>

                                    <div class="form-group mt-2">
                                        <label class="control-label" for="patente">Patente</label>
                                        <input id="patente" value="{{patente}}" type="text" name="patente" class="form-control">
                                    </div>

                                    <div class="form-group mt-2">
                                        <label class="control-label" for="motor">Motor</label>
                                        <input id="motor" type="text" value="{{motor}}" name="motor" class="form-control">
                                    </div>

                                    <div class="form-group mt-2">
                                        <label class="control-label" for="chasis">Chasis</label>
                                        <input id="chasis" type="text" value="{{chasis}}" name="chasis" class="form-control">
                                    </div>

                                    <div class="form-group mt-2">
                                        <label class="control-label" for="km_recorrido">Kilometraje</label>
                                        <input id="km_recorrido" type="text" value="{{km_recorrido}}" name="km_recorrido" class="form-control">
                                    </div>

                                    <div class="form-group mt-2">
                                        <label class="control-label" for="id_tipo">Tipo de arrastre</label>
                                        <select name="id_tipo" id="id_tipo" class="form-select"
                                                aria-label="Default select example">
                                            <option value="{{id_tipo}}" selected hidden>{{descripcion}}</option>
                                            <option value="">Sin Arrastre</option>
                                            {{#arrastre}}
                                                <option value="{{tipo_id}}">{{tipo_descripcion}}</option>
                                            {{/arrastre}}

                                        </select>
                                    </div>

                                    <div class="form-group mt-2 d-flex justify-content-end">
                                        <button name="modificar_id" value="{{id}}"
                                                class="btn btn-warning btn-block">Modificar</button>
                                    </div>
                                </form>
                            {{/vehiculo}}
                        </div>
                    </div>
                </div>
            </div>

            <h3>{{mensaje}}</h3>
        </div>

    </div>

</main>