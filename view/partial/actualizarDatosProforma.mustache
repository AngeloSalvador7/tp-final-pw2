<body onload="loadMap()">
<h1 class="mt-2 text-center">Actualizar datos de viaje</h1>
<hr/>

<form action="chofer/actualizarDatosRealesDelViaje" method="POST" id="formulario" class="row m-5">
    <div class="p-1  col-12 col-md-6">
        <div id="mapa" style="max-width: available; height:400px;">
            <!--mapa-->
        </div>
        <div class="col-sm-10">
            <input type="number" id="lat" name="latitud" style="display:none">
            <br>
            <input type="number" id="lon" name="longitud" style="display:none">
        </div>
    </div>
    <div class="col-12 col-md-6 row">
        <div class="form-group col-12 col-md-6">
            <label for="kilometros" class="mb-1">Kilometros recorridos desde ultima actualizacion</label>
            <div class="input-group mb-3">
                <span class="input-group-text">KM</span>
                <input type="number" class="form-control" id="kilometros" name="kilometros">
            </div>
        </div>
        <div class="form-group col-12 col-md-6">
            <label for="combustible-cargado" class="mb-1">Combustible cargado desde ultima actualizacion</label>
            <div class="input-group mb-3">
                <span class="input-group-text">LT</span>
                <input type="number" class="form-control" id="combustible-cargado" name="combustible-cargado">
            </div>
        </div>
        <div class="form-group col-12 col-md-6">
            <label for="costo-combustible" class="mb-1">Costo Combustible desde ultima actualizacion</label>
            <div class="input-group mb-3">
                <span class="input-group-text">U$D</span>
                <input type="number" class="form-control" id="costo-combustible" name="costo-combustible">
            </div>
        </div>
        <div class="form-group col-12 col-md-6">
            <label for="costo-peaje" class="mb-1">Costo Peaje desde ultima actualizacion</label>
            <div class="input-group mb-3">
                <span class="input-group-text">U$D</span>
                <input type="number" class="form-control" id="costo-peaje" name="costo-peaje">
            </div>
        </div>
        <div class="form-group col-12 col-md-6">
            <label for="costo-viatico" class="mb-1">Costo Viatico desde ultima actualizacion</label>
            <div class="input-group mb-3">
                <span class="input-group-text">U$D</span>
                <input type="number" class="form-control" id="costo-viatico" name="costo-viatico">
            </div>
        </div>
        <div class="form-group col-12 col-md-6">
            <label for="costo-hospedaje" class="mb-1">Costo Hospedaje desde ultima actualizacion</label>
            <div class="input-group mb-3">
                <span class="input-group-text">U$D</span>
                <input type="number" class="form-control" id="costo-hospedaje" name="costo-hospedaje">
            </div>
        </div>
        <div class="form-group col-12 col-md-6">
            <label for="Estado de viaje " class="mb-1">Estado de viaje</label>
            <select name="Estado" id="estado" class="form-select mb-3" onchange="ShowSelected()">
                <option value="EN CURSO" selected hidden>En curso</option>
                <option value="EN CURSO" >En curso</option>
                <option value="FINALIZADO" >Finalizado</option>
            </select>
        </div>
        <div class="form-group col-12 col-md-6" id="fecha" style="display: none">
            <label for="fecha-llegada" class="mb-1">Fecha de llegada</label>
            <div class="input-group mb-3">
                <span class="input-group-text">U$D</span>
                <input type="date" class="form-control" id="fecha-llegada" name="fecha-llegada">
            </div>
        </div>
        <div class="form-group col-12 col-md-12 text-center">
            <button type="submit" class="btn btn-primary" name="id_viaje" value="{{id_viaje}}">Enviar</button>
        </div>
    </div>
</form>


</body>






