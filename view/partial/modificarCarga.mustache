<main class="container-fluid">

    <div id="main" class="row text-white">

        <div class="info col-12 col-sm-2 bg-dark p-0">

            <div class="mt-3 me-3 text-white text-end">
                <button class="btn btn-outline-gray rounded"></button>
            </div>

            <div class="text-center text-white mb-5">
                <h3 class="mb-3"></h3>
            </div>

            <ul class="opciones">
                <li><a class="text-white" href="cargas">Cargas</a></li>
                <li><a class="text-white" href="cargas/agregarCarga">Agregar carga</a></li>
                <li><a class="text-white" href="cargas/editarCarga">Editar carga</a></li>
            </ul>

        </div>

        <div class="window col-12 col-sm-9 text-dark">
            <h1 class="mt-2">Modificar carga {{id}}</h1>
            <hr/>
            <div class="container-fluid">
                <div class="row">
                    <div class="panel panel-primary">
                        <div class="panel-body">
                            {{#carga}}
                                <form action="cargas/actualizarCarga" method="POST">
                                    <div class="form-group">
                                        <label class="control-label" for="peso_neto">Peso neto</label>
                                        <input id="peso_neto" type="number" value="{{peso_neto}}" name="peso_neto"
                                               class="form-control">
                                    </div>
                                    <div class="form-group mt-2">
                                        <label class="control-label" for="hazard">Hazard</label>
                                        <select name="hazard" id="hazard" class="form-select form-select-sm"
                                                aria-label="Default select example">
                                            <option value="{{hazard}}" selected hidden>{{#hazard}}SI{{/hazard}}
                                                {{^hazard}}NO{{/hazard}}
                                            </option>
                                            <option value="0">NO</option>
                                            <option value="1">SI</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label" for="clase_IMO">Clase IMO</label>
                                        <input id="clase_IMO" type="number" value="{{imo_class}}" name="clase_IMO" class="form-control">
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label" for="sub_clase_IMO">Sub Clase IMO</label>
                                        <input id="sub_clase_IMO" value="{{imo_sclass}}" type="number" name="sub_clase_IMO"
                                               class="form-control">
                                    </div>

                                    <div class="form-group mt-2">
                                        <label class="control-label" for="reefer">Reefer</label>
                                        <select name="reefer" id="reefer" class="form-select"
                                                aria-label="Default select example">
                                            <option value="{{reefer}}" selected hidden>{{#reefer}}SI{{/reefer}}
                                                {{^reefer}}NO{{/reefer}}
                                            </option>
                                            <option value="0">NO</option>
                                            <option value="1">SI</option>
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label" for="temperatura">Temperatura</label>
                                        <input id="temperatura" type="number" value="{{temperatura}}" name="temperatura" class="form-control">
                                    </div>

                                    <div class="form-group mt-2">
                                        <label class="control-label" for="id_tipo">Tipo de arrastre</label>
                                        <select name="id_tipo" id="id_tipo" class="form-select"
                                                aria-label="Default select example">
                                            <option value="{{id_tipo}}" selected hidden>{{descripcion}}</option>
                                            {{#arrastre}}
                                                <option value="{{tipo_id}}">{{tipo_descripcion}}</option>
                                            {{/arrastre}}

                                        </select>
                                    </div>

                                    <div class="form-group mt-2 d-flex justify-content-end">
                                        <button name="modificar_id" value="{{id}}"
                                                class="btn btn-warning btn-block">Modificar</button>
                                    </div>
                                </form>
                            {{/carga}}
                        </div>
                    </div>
                </div>
            </div>

            <h3>{{mensaje}}</h3>
        </div>

    </div>

</main>