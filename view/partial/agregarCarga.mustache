<main class="container-fluid">

    <div id="main" class="row text-white">

        <div class="info col-12 col-sm-2 bg-dark p-0">

            <div class="mt-3 me-3 text-white text-end">
                <button class="btn btn-outline-gray rounded"></button>
            </div>

            <div class="text-center text-white mb-5">
                <h3 class="mb-3"></h3>
            </div>

            <ul class="opciones">
                <li><a class="text-white" href="cargas">Cargas</a></li>
                <li><a class="text-white" href="cargas/agregarCarga">Agregar carga</a></li>
            </ul>

        </div>

        <div class="window col-12 col-sm-9 text-dark">
            <h1 class="mt-2">Agregar una carga</h1>
            <hr/>
            <div class="container-fluid">
                <div class="row">
                    <div class="panel panel-primary">
                        <div class="panel-body">
                            <form action="cargas/insertarCarga" method="POST">
                                <div class="form-group mt-2">
                                    <label class="control-label" for="peso_neto">Peso neto (Kg)</label>
                                    <input id="peso_neto" type="number" name="peso_neto" class="form-control" placeholder="Ingrese en peso neto de la carga">
                                </div>
                                <div class="form-group mt-2">
                                    <label class="control-label" for="peso_neto">Descripcion</label>
                                    <input id="Carga" type="text" name="Carga" class="form-control" placeholder="Ingrese una descripcion de la Carga">
                                </div>
                                <div class="form-group mt-2">
                                    <label class="control-label" for="hazard">Hazard</label>
                                    <select name="hazard" id="hazard" class="form-select" aria-label="Default select example">
                                        <option value="" selected disabled hidden>Elija Hazard</option>
                                        <option value="0">NO</option>
                                        <option value="1">SI</option>
                                    </select>
                                </div>
                                <div class="form-group mt-2">
                                    <label class="control-label" for="clase_IMO">Clase IMO</label>
                                    <input id="clase_IMO" type="number" name="clase_IMO" class="form-control" placeholder="Ingrese la clase IMO de la carga">
                                </div>
                                <div class="form-group mt-2">
                                    <label class="control-label" for="sub_clase_IMO">Subclase IMO</label>
                                    <input id="sub_clase_IMO" type="number" name="sub_clase_IMO" class="form-control"  placeholder="Ingrese la subclase IMO de la carga">
                                </div>

                                <div class="form-group mt-2">
                                    <label class="control-label" for="reefer">Reefer</label>
                                    <select name="reefer" id="reefer" class="form-select" aria-label="Default select example">
                                        <option value="" selected disabled hidden>Elija Reefer</option>
                                            <option value="0">NO</option>
                                             <option value="1">SI</option>
                                    </select>
                                </div>
                                <div class="form-group mt-2">
                                    <label class="control-label" for="temperatura">Temperatura (ÂºC)</label>
                                    <input id="temperatura" type="number" name="temperatura" class="form-control"  placeholder="Ingrese la temperatura de la carga">
                                </div>

                                <div class="form-group mt-2">
                                    <label class="control-label" for="id_tipo">Tipo de arrastre</label>
                                    <select name="id_tipo" id="id_tipo" class="form-select" aria-label="Default select example">
                                        <option value="" selected disabled hidden>Elija Arrastre</option>
                                        {{#arrastre}}
                                            <option value="{{tipo_id}}">{{tipo_descripcion}}</option>
                                        {{/arrastre}}
                                    </select>
                                </div>

                                <div class="form-group mt-2 d-flex justify-content-end" >
                                    <button class="btn btn-success btn-block mt-4 mb-4">Crear</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <h3>{{mensaje}}</h3>
        </div>

    </div>

</main>