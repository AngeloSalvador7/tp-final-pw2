{{#listaProformas}}
    <div class="window text-dark mx-3">
        <h1 class="mt-2">Proformas</h1>
        <hr />
        {{> alerta}}
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Ver</th>
                    <th scope="col">Nro. Proforma</th>
                    <th scope="col">ETD</th>
                    <th scope="col">ETA</th>
                    <th scope="col">Estado</th>
                    <th scope="col">Cliente</th>
                    <th scope="col">Chofer</th>
                    <th scope="col">Presupuesto</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#proformas}}
                    <form action="proformas/accion" method="POST" id="P{{Proforma}}">
                        <input type="hidden" name="proforma" value="{{Proforma}}">
                    </form>
                    <tr class="align-middle">
                        <td><a href="proformas/detalle/cod={{Proforma}}" class="btn m-1 btn-outline-info"><i class ="fas fa-eye"></i></a></td>
                        <td>#{{Proforma}}</td>
                        <td>{{ETD}}</td>
                        <td>{{ETA}}</td>
                        <td>{{Estado}}</td>
                        <td>{{Cliente}}</td>
                        <td>{{Chofer}}</td>
                        <td>U$D {{Costo}}</td>
                        <td>
                            <button type="submit" form="P{{Proforma}}" value="MODIFICAR" name="accion" class="btn m-1 btn-outline-warning">Modificar</button>
                            <button type="submit" form="P{{Proforma}}" value="BORRAR" name="accion" class="btn m-1 btn-outline-danger">Borrar</button>
                        </td>
                    </tr>
                {{/proformas}}
            </tbody>
        </table>
    </div>
{{/listaProformas}}



